<center>
  <h1>Medici's Current Clients </h1>
</center>

  <% if @clients.any? %>
  <ol>
    <% @clients.each() do |client| %>
    <li><b><a href="/client/<%= client.id() %>"><%= client.name() %></a><br></b></li>
    <% end %>
  </ol>

  <% else %>
  <p>There are currently no clients at Medici Hair Salon.</p>
  <% end %>

